<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_overlay"
    tools:context=".WordGuessMainActivity" >

    <TextView
        android:id="@+id/questionNr"
        style="@style/labelStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:text="Fråga nr" />

    <TextView
        android:id="@+id/question"
        style="@style/labelStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questionNr"
        android:layout_centerInParent="true"
        android:text="Fråga" />

    <Button
        android:id="@+id/button1"
        style="@style/ButtonBarButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/question"
        android:layout_centerInParent="true"
        android:layout_margin="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:onClick="button1Clicked"
        android:text="Button1" />

    <Button
        android:id="@+id/button2"
        style="@style/ButtonBarButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button1"
        android:layout_centerInParent="true"
        android:layout_margin="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:onClick="button2Clicked"
        android:text="Button2" />

    <Button
        android:id="@+id/button3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button2"
        android:layout_centerInParent="true"
        android:layout_margin="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:onClick="button3Clicked"
        android:text="Button3" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true" >

        <Button
            android:id="@+id/ButtonNewGamePlus"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="buttonNewGameClicked"
            android:text="+" />
        <Button
            android:id="@+id/ButtonNewGameMinus"
            android:layout_width="40dp"
            android:layout_toRightOf="@+id/ButtonNewGamePlus"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="buttonNewGameClicked"
            android:text="-" />
        <Button
            android:id="@+id/ButtonNewGameMultiply"
            android:layout_width="40dp"
            android:layout_toRightOf="@+id/ButtonNewGameMinus"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="buttonNewGameClicked"
            android:text="*" />
        <Button
            android:id="@+id/ButtonNewGameDivide"
            android:layout_width="40dp"
            android:layout_toRightOf="@+id/ButtonNewGameMultiply"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="buttonNewGameClicked"
            android:text="/" />
        </RelativeLayout>

</RelativeLayout>